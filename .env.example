# PostgreSQL Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=devdb
DB_USER=devuser
DB_PASSWORD=devpass
DB_HOST=db
DB_PORT=5432

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@ixmatix.com
PGADMIN_DEFAULT_PASSWORD=admin

# Django Settings
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1,app
SECRET_KEY=django-insecure-change-me-in-production

# Storage Configuration
# Opciones: 'local' (desarrollo), 's3' (AWS), 'azure' (Microsoft Azure)
STORAGE_TYPE=local

# AWS S3 Configuration (solo si STORAGE_TYPE=s3)
# AWS_STORAGE_BUCKET_NAME=tu-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=cdn.example.com
# AWS_ACCESS_KEY_ID=tu-access-key
# AWS_SECRET_ACCESS_KEY=tu-secret-key

# Azure Blob Storage Configuration (solo si STORAGE_TYPE=azure)
# AZURE_ACCOUNT_NAME=tu-storage-account
# AZURE_ACCOUNT_KEY=tu-account-key
# AZURE_CONTAINER=media
# AZURE_CUSTOM_DOMAIN=cdn.example.com
